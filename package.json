{
  "name": "typescript-package-template",
  "version": "0.1.0",
  "description": "A modern TypeScript package template with dual CJS/ESM support, testing, linting, and automated releases",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.base.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky",
    "dev": "tsc --watch --project tsconfig.base.json",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "size": "npm run build && node -e \"console.log('Bundle size:', require('fs').statSync('dist/cjs/index.js').size, 'bytes')\"",
    "validate": "npm run lint && npm run test && npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "sideEffects": false,
  "unpkg": "dist/esm/index.js",
  "jsdelivr": "dist/esm/index.js",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  },
  "keywords": [
    "typescript",
    "template",
    "package",
    "npm",
    "library",
    "esm",
    "cjs",
    "dual-format",
    "typescript-package",
    "boilerplate",
    "starter",
    "typescript-library",
    "modern",
    "automated",
    "testing",
    "linting"
  ],
  "author": "Kiana Cox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kianacox/typescript-package-template.git"
  },
  "bugs": {
    "url": "https://github.com/kianacox/typescript-package-template/issues"
  },
  "homepage": "https://github.com/kianacox/typescript-package-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.14",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jiti": "^2.5.1",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
